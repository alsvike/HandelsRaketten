@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Glemt dit password?";
}

<style>
    /* Tilføj lidt styling for at gøre formularen mere tiltalende */
    .forgot-password-form {
        max-width: 400px;
        margin: 0 auto;
        padding: 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

        .forgot-password-form h2 {
            text-align: center;
            margin-bottom: 20px;
        }
    h1{
        text-align: center;
    }
</style>

<h1>@ViewData["Title"]</h1>
<br />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <section class="forgot-password-form">
            <h2>Indtast din email</h2>
            <hr />
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">Nulstil Password</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
