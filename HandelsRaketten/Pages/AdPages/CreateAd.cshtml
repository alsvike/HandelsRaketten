@page
@model HandelsHjornet.Pages.AdPages.CreateAdModel
@{
}


<div class="white-background">
    <div class="">
        <form method="post">
            <div>
                <p>Vælg Kategori</p>
                <select name="category" class="form-control">
                    <option value="IndoorPlant">Indedørs Planter</option>
                    <option value="OutdoorPlant">Udendørs Planter</option>
                </select>
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Vælg</button>
            </div>
        </form>
    </div>

    <div>
        <form method="post" enctype="multipart/form-data">

            <div>
                @if (Model.Category != null)
                {
                    <div class="form-group">
                        <label asp-for="@Model.Photo" class="control-label"></label>
                        <div class="custom-file">
                            <input asp-for="@Model.Photo" class="custom-file-input form-control" />
                            <span asp-validation-for="@Model.Photo" class="fst-italic fs-6"></span>
                        </div>
                    </div>
                }
            </div>
            <br />
            <div>
                @if (Model.Category == "IndoorPlant")
                {
                    <div class="form-group">
                        <label asp-for="IndoorPlant.Title" class="control-label"></label>
                        <input asp-for="IndoorPlant.Title" class="form-control" />
                        <span asp-validation-for="IndoorPlant.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IndoorPlant.Description" class="control-label"></label>
                        <textarea asp-for="@Model.IndoorPlant.Description" rows="4"></textarea>
                        <span asp-validation-for="IndoorPlant.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IndoorPlant.Price" class="control-label"></label>
                        <input asp-for="IndoorPlant.Price" class="form-control" />
                        <span asp-validation-for="IndoorPlant.Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IndoorPlant.PotSize" class="control-label"></label>
                        <input asp-for="IndoorPlant.PotSize" class="form-control" />
                        <span asp-validation-for="IndoorPlant.PotSize" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IndoorPlant.Size" class="control-label"></label>
                        <input asp-for="IndoorPlant.Size" class="form-control" />
                        <span asp-validation-for="IndoorPlant.Size" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="IndoorPlant.RecommendedSoil" class="control-label"></label>
                        <input asp-for="IndoorPlant.RecommendedSoil" class="form-control" />
                        <span asp-validation-for="IndoorPlant.RecommendedSoil" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IndoorPlant.RecommendedTemperature" class="control-label"></label>
                        <input asp-for="IndoorPlant.RecommendedTemperature" class="form-control" />
                        <span asp-validation-for="IndoorPlant.RecommendedTemperature" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IndoorPlant.WateringNeeds" class="control-label"></label>
                        <input asp-for="IndoorPlant.WateringNeeds" class="form-control" />
                        <span asp-validation-for="IndoorPlant.WateringNeeds" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IndoorPlant.SunlightNeeds" class="control-label"></label>
                        <input asp-for="IndoorPlant.SunlightNeeds" class="form-control" />
                        <span asp-validation-for="IndoorPlant.SunlightNeeds" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IndoorPlant.Species" class="control-label"></label>
                        <input asp-for="IndoorPlant.Species" class="form-control" />
                        <span asp-validation-for="IndoorPlant.Species" class="text-danger"></span>

                    </div>

                }
                else if (Model.Category == "OutdoorPlant")
                {
                    <div class="form-group">
                        <label asp-for="OutdoorPlant.AdImage" class="control-label"></label>
                        <input asp-for="OutdoorPlant.AdImage" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="OutdoorPlant.Title" class="control-label"></label>
                        <input asp-for="OutdoorPlant.Title" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="OutdoorPlant.Description" class="control-label"></label>
                        <input asp-for="OutdoorPlant.Description" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="OutdoorPlant.Price" class="control-label"></label>
                        <input asp-for="OutdoorPlant.Price" class="form-control" />
                    </div>
                }

                else
                {
                    <br />
                    <h3>Vælg en kategori for at oprette en annonce</h3>
                    <br />

                }
            </div>

            <br />
            @if (!string.IsNullOrEmpty(Model.Category))
            {
                <h3>Kontaktoplysninger</h3>
                <div>
                    <div class="form-group">
                        <label asp-for="Seller.Email" class="control-label"></label>
                        <input asp-for="Seller.Email" class="form-control" />
                        <span asp-validation-for="Seller.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Seller.Address" class="control-label"></label>
                        <input asp-for="Seller.Address" class="form-control" />
                        <span asp-validation-for="Seller.Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Seller.Phone" class="control-label"></label>
                        <input asp-for="Seller.Phone" class="form-control" />
                        <span asp-validation-for="Seller.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Seller.ZipCode" class="control-label"></label>
                        <input asp-for="Seller.ZipCode" class="form-control" />
                        <span asp-validation-for="Seller.ZipCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Seller.City" class="control-label"></label>
                        <input asp-for="Seller.City" class="form-control" />
                        <span asp-validation-for="Seller.City" class="text-danger"></span>
                    </div>
                </div>


                <div>
                    <button class="btn btn-primary" type="submit" asp-page-handler="Create" asp-route-category="@Model.Category">Lav</button>
                </div>
            }
        </form>
    </div>
</div>
